@model IEnumerable<BSsystem0.Models.User>
<div class="container">
    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    *@
    @{
        ViewBag.Title = "Customers Info";
    }

    <h2>Customers Info</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Phone Number</th>
                <th>Name</th>
                <th>Email Address</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.username</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>
                        <a class="btn btn-primary" asp-action="UserEdit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="UDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
           
        </tbody>
    </table>

    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="UserAdd">Add Row</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="UserDelete">Delete Row</a>

    <script>
        $(document).ready(function () {
            $("button.btn-primary").click(function () {
                $("table tbody").append("<tr><td>New Employee</td><td>0</td><td>0</td><td>0</td><td>0</td></tr>");
            });
            $("button.btn-danger").click(function () {
                $("table tbody tr:last").remove();
            });
        });
    </script>
</div>