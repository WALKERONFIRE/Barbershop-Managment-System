
<div class="container">
    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    *@
    @{
        ViewBag.Title = "Service Info";
    }
    @model IEnumerable<BSsystem0.Models.Service>

    <h2>Service Info</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Price After Offer</th>
                <th>Image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.PriceAfterOffer</td>
                    <td>@item.Image</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Service" asp-action="EditService" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                    <a class="btn btn-danger" asp-action="SDelete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <a class="btn btn-primary" asp-area="" asp-controller="Service" asp-action="AddService">Add Row</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="ServiceDelete">Delete Row</a>

    <script>
        $(document).ready(function () {
            $("button.btn-primary").click(function () {
                $("table tbody").append("<tr><td>New Employee</td><td>0</td><td>0</td><td>0</td><td>0</td></tr>");
            });
            $("button.btn-danger").click(function () {
                $("table tbody tr:last").remove();
            });
        });
    </script>
</div>